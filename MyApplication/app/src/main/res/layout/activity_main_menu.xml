<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primary"
    tools:context=".MainActivity"
    android:gravity="end"
    android:padding="10dp"
    >

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:maxHeight="12dp"
        android:layout_gravity="left"
        android:src="@drawable/dbquizz"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select your catagory:"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:textSize="20sp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/general_trivia"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="-200dp"
            android:backgroundTint="@color/primary"
            android:text="General Trivia"
            android:textAllCaps="false"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/transformations"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="-150dp"
            android:backgroundTint="@color/primary"
            android:text="Transformations"
            android:textAllCaps="false"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="-100dp"
            android:backgroundTint="@color/primary"
            android:text="Relations"
            android:textAllCaps="false"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="-50dp"
            android:backgroundTint="@color/primary"
            android:text="Comparative Strength"
            android:textAllCaps="false"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary"
            android:text="Age"
            android:textAllCaps="false"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/highscores"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary"
            android:layout_marginTop="100dp"
            android:text="Highscores"
            app:icon="@drawable/ic_bars"
            android:textAllCaps="false"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="260dp"
            android:backgroundTint="@color/primary"
            app:icon="@drawable/ic_info"
            android:text="Info"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="110dp"
            android:backgroundTint="@color/primary"
            app:icon="@drawable/ic_settings"
            android:text="settings"/>

    </com.google.android.material.card.MaterialCardView>


</LinearLayout>