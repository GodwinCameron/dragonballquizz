<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primary"
    tools:context=".MainActivity"
    android:gravity="end"
    android:padding="10dp"
    >

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:maxHeight="12dp"
        android:layout_gravity="left"
        android:src="@drawable/dbquizz"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fianl Score:"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_marginBottom="12dp"/>
    <TextView
        android:id="@+id/results_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="40/50"
        android:textColor="#F6F6F6"
        android:textAlignment="center"
        android:textSize="70sp"
        android:fontFamily="cursive"
        android:shadowColor="#50260C"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1.6"
        android:textAllCaps="true"/>

    <ImageView
        android:id="@+id/iv_result_image"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:maxHeight="12dp"
        android:src="@drawable/gokuresult"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/tv_report_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Great job!"
            android:textAlignment="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"/>
        <TextView
            android:id="@+id/power_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Power level: goku"
            android:textAllCaps="true"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="70dp"
            android:backgroundTint="@color/secondary"
            android:layout_gravity="center"
            android:text="Continue"
            android:textStyle="bold"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="70dp"
            android:backgroundTint="@color/secondary"
            android:layout_gravity="center"
            android:text="Retry?"
            android:textStyle="bold"/>

    </com.google.android.material.card.MaterialCardView>


</LinearLayout>