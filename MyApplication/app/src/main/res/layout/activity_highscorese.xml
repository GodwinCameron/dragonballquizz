<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primary"
    tools:context=".MainActivity"
    android:gravity="end"
    android:padding="10dp"
    >

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:maxHeight="12dp"
        android:layout_gravity="left"
        android:src="@drawable/dbquizz"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/general_trivia"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="-300dp"
            android:backgroundTint="@color/secondary"
            android:text="General Trivia Score:"
            android:textAllCaps="false"/>
        <TextView
            android:id="@+id/tv_general_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="0/5"
            android:layout_marginTop="-270dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/transformations"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="-220dp"
            android:backgroundTint="@color/secondary"
            android:text="Transformations Score:"
            android:textAllCaps="false"/>
        <TextView
            android:id="@+id/tv_transformations_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="0/5"
            android:layout_marginTop="-190dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/Age"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="-140dp"
            android:backgroundTint="@color/secondary"
            android:text="Age Score:"
            android:textAllCaps="false"/>
        <TextView
            android:id="@+id/tv_age_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="0/5"
            android:layout_marginTop="-110dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/Strength"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="-60dp"
            android:backgroundTint="@color/secondary"
            android:text="Strength Score:"
            android:textAllCaps="false"/>
        <TextView
            android:id="@+id/tv_strength_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="0/5"
            android:layout_marginTop="-30dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_back"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary"
            android:layout_marginTop="100dp"
            android:text="Back"
            android:textAllCaps="false"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_reset"
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary"
            android:layout_marginTop="180dp"
            android:text="Reset Scores"
            android:textAllCaps="false"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="260dp"
            android:backgroundTint="@color/primary"
            app:icon="@drawable/ic_info"
            android:text="Info"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="110dp"
            android:backgroundTint="@color/primary"
            app:icon="@drawable/ic_settings"
            android:text="settings"/>

    </com.google.android.material.card.MaterialCardView>


</LinearLayout>